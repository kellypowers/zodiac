load './lib/zodiac2.rb'
scorp = Zodiac2.create_new_zodiac("Scorpio")
def zodiac_info(zodiac_sign)
        zodiac = Zodiac2.look_up_instance(zodiac_sign)
        array = ["traits", "symbol", "ruling_planet", "compatability", "dates, how_to_spot", "symbol", "element", "famous_people", "secret_wish", "hates"]
        puts "What do you want to know about:
        1.  Traits
        2.  Symbol
        3.  Ruling Planet
        4.  Compatable signs
        5.  Dates
        6.  How to spot this sign
        7. More"
        user_input = gets.strip 
        number = user_input.to_i - 1 
        method = array[number]
        puts "method is #{method}"
        if number == 7
            puts "8. Symbol
            9. Element
            10. Famous people with this sign
            11. Secret wish
            12. Hates"
            user_input = gets.strip
            index = user_input.to_i
        else 
            zodiac.send(method)
        end
    end
zodiac_info("Scorpio")